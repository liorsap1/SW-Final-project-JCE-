<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/magen"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.and.wifiapp.MainActivity">

    <ImageView
            android:id="@+id/imageView1"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:paddingBottom="50dp"
            android:src="@mipmap/logoapp"/>

    <ImageView
            android:text="Router Indices"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:src="@drawable/range"
            android:layout_gravity="center"
            android:id="@+id/indices_button"
            android:cropToPadding="true"
            android:visibility="visible"/>

    <ImageView
            android:text="Router Info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/info_icon"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/info_button"/>

    <ImageView
            android:text="Router Configuration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/config_icon"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/config_route"/>

    <TextView
            android:text="Final Project JCE"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:layout_weight="1.5"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:layout_gravity="left"
            android:gravity="bottom"
            android:id="@+id/t2"/>

</LinearLayout>
