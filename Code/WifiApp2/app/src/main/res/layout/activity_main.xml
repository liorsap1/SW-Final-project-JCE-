<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/normal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.and.wifiapp.MainActivity">



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/layout2">
        <TextView
                android:text="Router Appliction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.55"
                android:layout_gravity="center"
                android:id="@+id/title" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
                android:textAllCaps="true" android:textStyle="normal|bold|italic" android:textSize="30sp"/>
        <TextView
                android:text="By Lior Sapir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.55"
                android:textColor="#ae260d"
                android:layout_gravity="center"
                android:id="@+id/t1" android:fontFamily="sans-serif" android:textSize="30sp"/>
        <Button
                android:text="press for Indices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="#f31a71"
                android:layout_gravity="center"
                android:id="@+id/indices_button"
                style="@android:style/Widget.Button"/>
        <Button
                android:text="Press To Get Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="#39f40a"
                android:layout_gravity="center"
                android:id="@+id/info_button"
                style="@android:style/Widget.Button"/>
        <Button
                android:text="Router webrowse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="#1530ff"
                android:layout_gravity="center"
                android:id="@+id/web_route"
                style="@android:style/Widget.Button"/>
        <Button
                android:text="Configure Router"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="#f89f07"
                android:layout_gravity="center"
                android:id="@+id/config_route" style="@android:style/Widget.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_weight="3"
                android:textColor="#ed6226"
                android:layout_gravity="center"
                android:id="@+id/t2"/>


    </LinearLayout>


</LinearLayout>


