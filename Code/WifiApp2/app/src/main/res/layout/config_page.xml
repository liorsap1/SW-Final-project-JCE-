<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/config_background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:text="Router Configuration Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#f8850b"
                android:textSize="25sp"
                android:textStyle="italic"
                android:id="@+id/title"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Address"/>
            <EditText
                    android:id="@+id/port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Port"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="User Name"/>
            <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Spinner android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:entries="@array/wifi_mode"
                     android:id="@+id/wifi_mode">
            </Spinner>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Spinner android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:entries="@array/wifinet_mode"
                     android:id="@+id/wifi_net_mode">
            </Spinner>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                    android:id="@+id/new_ssid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="SSID name"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Spinner android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:entries="@array/wifi_BroadCastMode"
                     android:id="@+id/wifi_BroadMode">
            </Spinner>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                    android:id="@+id/new_wifi_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Wifi password"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    style="@android:style/Widget.Button"/>
            <Button
                    android:id="@+id/clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear"
                    style="@android:style/Widget.Button"/>
        </LinearLayout>

        <TextView
                android:id="@+id/info"
                android:hint="Server Port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textAlignment="textStart"/>
        <TextView
                android:id="@+id/infoip"
                android:hint="Server IP"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textAlignment="textStart"/>
        <TextView
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:scrollbars="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Client Response"/>
        <TextView
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="15sp"
                android:hint="Server Response"
                android:textAlignment="textStart"/>

    </LinearLayout>
</ScrollView>


