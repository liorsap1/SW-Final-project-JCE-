<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/config_background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:text="Router Configuration Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#f8850b"
                android:textSize="25sp"
                android:textStyle="italic"
                android:id="@+id/title"/>
        <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="dstAddress"/>
        <EditText
                android:id="@+id/port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="dstPort"/>

        <Button
                android:id="@+id/connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect..." style="@android:style/Widget.Button"/>
        <Button
                android:id="@+id/change_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="change ssid" style="@android:style/Widget.Button"/>
        <EditText
                android:id="@+id/new_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="New SSID name"/>
        <Button
                android:id="@+id/change_wifi_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="change wifi password"
                style="@android:style/Widget.Button"/>
        <EditText
                android:id="@+id/new_wifi_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="New wifi password"/>


        <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear" style="@android:style/Widget.Button"/>


        <TextView
                android:id="@+id/info"
                android:hint="Server Port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textAlignment="textStart"/>
        <TextView
                android:id="@+id/infoip"
                android:hint="Server IP"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textAlignment="textStart"/>
        <TextView
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:scrollbars="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Client Response"/>
        <TextView
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="15sp"
                android:hint="Server Response"
                android:textAlignment="textStart"/>

    </LinearLayout>
</ScrollView>


