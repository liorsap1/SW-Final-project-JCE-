            <Button
                android:id="@+id/save"
                style="@android:style/Widget.Button"
                android:layout_width="104dp"
                android:layout_height="33dp"
                android:background="@drawable/blue_button"
                android:text="Save"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/clear"
                android:layout_width="104dp"
                android:layout_height="33dp"
                android:background="@drawable/blue_button"
                android:textColor="#ffffff"
                android:layout_marginLeft="5dp"
                android:text="Clear"
                style="@android:style/Widget.Button"/>
        </LinearLayout>

